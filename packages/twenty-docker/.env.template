# ============================================================================
# FLCRMLMS Docker Compose Configuration
# ============================================================================
# Copy this file to .env and update the values for your environment
# DO NOT commit .env to git!

# ============================================================================
# Image Configuration
# ============================================================================
# Docker image tag to use (latest, main-abc123, etc.)
TAG=latest

# ============================================================================
# Application Configuration
# ============================================================================
# Public URL where the application will be accessible
SERVER_URL=http://localhost:3000

# Secret key for encryption (REQUIRED - minimum 32 characters)
# Generate with: openssl rand -base64 32
APP_SECRET=replace_me_with_a_random_string_at_least_32_characters

# Application version (semantic version format: x.y.z or x.y.z-suffix)
APP_VERSION=0.0.0-local

# ============================================================================
# Database Configuration
# ============================================================================
# PostgreSQL database settings
PG_DATABASE_NAME=default
PG_DATABASE_USER=postgres
PG_DATABASE_PASSWORD=postgres
PG_DATABASE_HOST=db
PG_DATABASE_PORT=5432

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_URL=redis://:gzaqkbpgopst@us-west1-001.proxy.kinsta.app:30270/0

# ============================================================================
# Migration & Cron Settings
# ============================================================================
# Set to "true" to disable automatic database migrations on startup
# DISABLE_DB_MIGRATIONS=false

# Set to "true" to disable automatic cron job registration on startup
# DISABLE_CRON_JOBS_REGISTRATION=false

# ============================================================================
# Storage Configuration (Optional - for production)
# ============================================================================
# Storage type: local or s3
# STORAGE_TYPE=local

# For S3-compatible storage (AWS S3, MinIO, etc.)
# STORAGE_S3_REGION=us-east-1
# STORAGE_S3_NAME=your-bucket-name
# STORAGE_S3_ENDPOINT=https://s3.amazonaws.com

# ============================================================================
# Email Configuration (Optional)
# ============================================================================
# EMAIL_FROM_ADDRESS=noreply@yourdomain.com
# EMAIL_FROM_NAME="Your Company"
# EMAIL_SYSTEM_ADDRESS=system@yourdomain.com
# EMAIL_DRIVER=smtp
# EMAIL_SMTP_HOST=smtp.gmail.com
# EMAIL_SMTP_PORT=587
# EMAIL_SMTP_USER=your-email@gmail.com
# EMAIL_SMTP_PASSWORD=your-app-password

# ============================================================================
# Google OAuth (Optional)
# ============================================================================
# MESSAGING_PROVIDER_GMAIL_ENABLED=false
# CALENDAR_PROVIDER_GOOGLE_ENABLED=false
# AUTH_GOOGLE_CLIENT_ID=your-client-id
# AUTH_GOOGLE_CLIENT_SECRET=your-client-secret
# AUTH_GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback
# AUTH_GOOGLE_APIS_CALLBACK_URL=http://localhost:3000/auth/google-apis/callback

# ============================================================================
# Microsoft OAuth (Optional)
# ============================================================================
# CALENDAR_PROVIDER_MICROSOFT_ENABLED=false
# MESSAGING_PROVIDER_MICROSOFT_ENABLED=false
# AUTH_MICROSOFT_ENABLED=false
# AUTH_MICROSOFT_CLIENT_ID=your-client-id
# AUTH_MICROSOFT_CLIENT_SECRET=your-client-secret
# AUTH_MICROSOFT_CALLBACK_URL=http://localhost:3000/auth/microsoft/callback
# AUTH_MICROSOFT_APIS_CALLBACK_URL=http://localhost:3000/auth/microsoft-apis/callback

# ============================================================================
# GitHub Container Registry Authentication (Required for private images)
# ============================================================================
# This is your GitHub Personal Access Token with 'read:packages' scope
# Create one at: https://github.com/settings/tokens/new
# IMPORTANT: DO NOT commit this file to git with your token!
# GITHUB_TOKEN=your_github_token_here

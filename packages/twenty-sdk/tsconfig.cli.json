{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist/cli",
    "rootDir": "./src/cli",
    "moduleResolution": "bundler",
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": false,
    "declarationMap": false,
    "isolatedModules": false
  },
  "include": ["src/cli/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.e2e-spec.ts",
    "**/__tests__/**"
  ]
}

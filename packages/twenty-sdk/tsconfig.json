{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "src",
    "module": "esnext",
    "target": "es2022",
    "esModuleInterop": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "strictBindCallApply": false,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "files": [],
  "references": [
    {
      "path": "./tsconfig.cli.json"
    },
    {
      "path": "./tsconfig.e2e.json"
    },
  ],
  "include": ["src/**/*.ts", "vite.config.ts"],
  "exclude": ["src/cli/**"]
}

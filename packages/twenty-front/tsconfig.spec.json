{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node"],
    "paths": {
     "@/*": ["packages/twenty-front/src/modules/*"],
      "~/*": ["packages/twenty-front/src/*"],
      "twenty-ui": ["packages/twenty-ui/src/index.ts"],
      "@ui/*": ["packages/twenty-ui/src/*"]
    }
  },
  "include": [
    "**/__mocks__/**/*",
    "jest.config.ts",
    "setupTests.ts",
    "src/**/*.d.ts",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "tsup.config.ts",
    "tsup.ui.index.tsx",
    "vite.config.ts"
  ]
}

{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "jsx": "react-jsx",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "noEmit": true,
    "types": ["node", "vitest/globals"],
    "outDir": "../../.cache/tsc",
    "paths": {
      "@ui/*": ["./src/*"],
      "@assets/*": ["./src/assets/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    ".storybook/*.ts",
    ".storybook/*.tsx",
    "setupTests.ts",
    "vite.config.ts",
    "vitest.config.ts",
    "vitest.unit.config.ts"
  ]
}

{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "builder": "swc",
    "typeCheck": true,
    "assets": [
      {"include": "**/yarn.lock", "outDir": "dist/src"},
      {"include": "**/package.json", "outDir": "dist/src"}
    ],
    "watchAssets": true
  }
}

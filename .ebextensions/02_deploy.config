files:
  "/opt/elasticbeanstalk/hooks/appdeploy/pre/50_yarn.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/bin/bash
      set -e
      
      # Install yarn globally
      npm install -g yarn
      
      # Navigate to app directory
      cd /var/app/staging
      
      # Install dependencies with yarn
      yarn install --frozen-lockfile
      
      # Build the server
      yarn nx build twenty-server

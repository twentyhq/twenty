# Spot Instance Configuration for STAGING Environment
# 100% Spot instances to minimize costs

option_settings:
  aws:ec2:instances:
    EnableSpot: true
    SpotFleetOnDemandBase: 0
    SpotFleetOnDemandAboveBasePercentage: 0
    SpotMaxPrice: ""  # Empty = use on-demand price as max
    InstanceTypes: "t3.small,t3a.small"  # Diversify for better availability

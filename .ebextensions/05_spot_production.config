# Spot Instance Configuration for PRODUCTION Environment
# 30% On-Demand / 70% Spot ratio for reliability + cost savings

option_settings:
  aws:ec2:instances:
    EnableSpot: true
    SpotFleetOnDemandBase: 1
    SpotFleetOnDemandAboveBasePercentage: 30
    SpotMaxPrice: ""  # Empty = use on-demand price as max
    InstanceTypes: "t3.small,t3a.small,t3.medium,t3a.medium"  # Diversify across types and generations

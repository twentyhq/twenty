# =============================================================================
# AI Layer Integration Environment Variables
# =============================================================================
# Copy to .env.ai-layer and configure for your environment

# -----------------------------------------------------------------------------
# AI Layer Services (Internal Docker DNS)
# -----------------------------------------------------------------------------
CTX_MCP_URL=http://ctx-mcp:3100
KB_MCP_URL=http://kb-mcp:3110
N8N_API_URL=http://n8n:5678
REDIS_AI_URL=redis://redis:6379

# -----------------------------------------------------------------------------
# Error Reporting (optional in dev)
# -----------------------------------------------------------------------------
AI_LAYER_ERROR_REPORTING_ENABLED=true
AI_LAYER_ERROR_ENDPOINT=http://ctx-mcp:3100/api/errors/report

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
AI_LAYER_LOG_FORMAT=json
AI_LAYER_LOG_LEVEL=info

# -----------------------------------------------------------------------------
# Workspace Context (for multi-tenant isolation)
# -----------------------------------------------------------------------------
# Default workspace for development - override per-request in production
AI_LAYER_DEFAULT_WORKSPACE_ID=ws_twenty_dev
